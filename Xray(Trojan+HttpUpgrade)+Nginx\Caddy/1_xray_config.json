      "port": 2027, //Trojan+HttpUpgrade 监听端口
      "protocol": "trojan",
      "settings": {
        "clients": [
          {
            "password":"diy2027", //修改为自己密码
            "email": "2027@gmail.com"
          }
        ]
      },
      "streamSettings": {
        "network": "httpupgrade",
        "security": "none",
        "httpupgradeSettings": {
          "path": "/DhttpZ9k" //修改为自己的路径
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
